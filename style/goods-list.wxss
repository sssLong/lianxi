/*  商品列表  */
.kind-list { 
    background: #f5f5f5;
    padding-top: 12rpx;
    position: relative;
    z-index: 1;
    margin-top: 260rpx;
}

.kind-main {
    
    margin-bottom: 16rpx;
}

.food-all {
    position: relative;
}

.food {
    width: 95%;
    padding: 24rpx 0;
    background: white;
    display: box;
    display: -webkit-box;
    margin: 0 auto;
}
.food i,.food em{
    display: inline-block;
}
.food-left {
    width: 232rpx;
    height: 100%;
    position: relative;
}

.food-left image {
    display: block;
    width: 200rpx;
    height: 200rpx;
    margin-left: 16rpx;
    border: 2rpx solid #ddd;
}

.food-left .special-log {
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    border:none;
    width: 80rpx;
    height: 80rpx;
}

.food-left p {
    display: block;
    text-align: center;
    line-height: 36rpx;
    font-size: 28rpx;
    color: red;
    border: 2rpx solid #ddd;
    border-top: none;
    width: 200rpx;
    margin-left: 16rpx;
}

.food-right {
    box-flex: 1.0;
    -webkit-box-flex: 1.0;
    height: 100%;
    position: relative;
}
/*  收藏商品  */
.food-coll {
    position: absolute;
    width: 48rpx;
    height: 48rpx;
    right: 2%;
    top: 0;
    z-index: 3;
    background-color: #fff;
}

.kind-coll {
    width: 100%;
    height: 100%;
}

.food-right .food-name {
    
    font-size: 36rpx;
    color: #000;
}

.food-right .price {
    color: #666;
    padding-top: 8rpx;
    font-size: 28rpx;
}
.food-right text{
    display: inline-block;
    float:left;
}
.food-right s{
    display: inline-block;
    position: relative;
}
.food-right line{
    display: inline-block;
    width:100%;
    position: absolute;
    left:0;
    top:18rpx;
    border-bottom:2rpx solid #666;
}
.food-right p {
    display: block;
    margin-top: 10rpx;
    color: #666;
    font-size: 24rpx;
    line-height: 30rpx;
}

.food-right span {
    display: block;
    margin-top: 14rpx;
    color: #ff7e00;
    font-size: 28rpx;
}

/*  商品数量栏 */
.food-buy {
    width: 95%;
    margin: 4rpx auto 10rpx auto;
    height: 68rpx;
    background: white;
    padding-top: 8rpx;
}

.food-number {
    display: block;
    height: 60rpx;
    float: left;
    margin-left: 20rpx;
}

.food-number .some-style{
    display: block;
    height: 100%;
    line-height: 60rpx;
    width: 76rpx;
    font-size: 36rpx;
    border: 2rpx solid #ddd;
    border-right: none;
    float: left;
    text-align: center;
    color:#000;
}

.food-number .yellow {
    color: #ff7e00;
}

.food-number .last {
    color: #ff7e00;
    border-right: 2rpx solid #ddd;
}

.special-more {
    float: right;
    margin: 4rpx 10rpx 0 0;
    padding: 0 20rpx;
    height: 52rpx;
    line-height: 52rpx;
    font-size: 30rpx;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    background: red;
}

.food-car {
    float: right;
    padding: 0 20rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 30rpx;
    text-align: center;
    color: #ff7e00;
    margin-right: 30rpx;
    border: 2rpx solid #ddd;
    border-radius: 16rpx;
}

/*  放大区  */
.big-box{
    display: flex;
    display: -webkit-flex;
    justify-content:center;
    align-items:center;
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 5;    
}

.big-mirror {
    position: relative;
    width: 80%;
    background: white;
    box-shadow: 0 0 20rpx 8rpx #474747;
    border: 2rpx solid #0b0b0b;
}

#image {
    display: block;
    width: 85%;
    margin: 40rpx auto 0 auto;
    border: 2rpx solid #999;
    height: 460rpx;
}

#mirror_close {
    display: block;
    width: 60rpx;
    height: 60rpx;
    position: absolute;
    right: -22rpx;
    top: -22rpx;
}

.big-mirror view {
    width: 85%;
    margin: 0 auto;
    font-size: 52rpx;
    padding: 30rpx 0;
    line-height: 52rpx;
    border-bottom: 2rpx solid #ddd;
    color: #333;
}

.big-mirror p {
    display: block;
    width: 85%;
    margin: 0 auto;
    font-size: 32rpx;
    color: #666;
    line-height: 40rpx;
    border-bottom: 2rpx solid #ddd;
    padding: 30rpx 0;
}

.big-mirror span {
    width: 85%;
    margin: 0 auto;
    display: block;
    text-align: right;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
}

.big-mirror i {
    color: #ff7e00;
}