page{
    padding-bottom: 120rpx;
}
.car-head {
    display: inline-block;
    position: absolute;
    right: 2%;
    padding: 0 24rpx;
    color: #000;
    font-size: 28rpx;
}

.car-kind-list {
    width: 100%;
    background: #f5f5f5;
    position: relative;
    margin-top: 92rpx
}

.car-kind-box {
    width: 100%;
}
.car-kind-box::after{
    display: block;
    content:"";
    clear:both;
}
.car-remove {
    float: left;
    width: 64rpx;
    height:370rpx;
    justify-content:center;
    align-items:center;
    background: #f5f5f5;
    position: relative;

}

.car-remove-icon {
    display: block;
    width: 44rpx;
    height: 44rpx;
    margin-left:8rpx;
    /*position: absolute;*/
}

